<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <br />
      <h3>Create a New Listing</h3>
      <form
        action="/listings"
        method="POST"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div>
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add title"
            class="form-control"
            required
          />
          <!--Success message (vaild-feedback)-->
          <div class="valid-feedback">Title looks good!</div>
          <!--Failure message (invalid-feedback)-->
          <div class="invalid-feedback">Please enter a valid title!</div>
        </div>
        <br />
        <div>
          <label for="description" class="form-label">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            rows="5"
            cols="30"
            class="form-control"
            required
          ></textarea>
          <!--Success message (valid-feedback)-->
          <div class="valid-feedback">Description looks good!</div>
          <!--Failure message (invalid-feedback)-->
          <div class="invalid-feedback">Please enter a short description!</div>
        </div>

        <!--Image Upload-->
        <div class="mt-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            required
          />
        </div>
        <br />
        <div class="row">
          <!--price-->
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              placeholder="Add Price"
              class="form-control"
              required
            />
            <!--Success message (valid-feedback)-->
            <div class="valid-feedback">Price looks good!</div>
            <!--Failure message (invalid-feedback)-->
            <div class="invalid-feedback">Please enter valid price!</div>
          </div>
          <!--country-->
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="Add Country"
              class="form-control"
              required
            />
            <!--Success message (valid-feedback)-->
            <div class="valid-feedback">Country looks good!</div>
            <!--Failure message (invalid-feedback)-->
            <div class="invalid-feedback">Please enter a valid country</div>
          </div>
        </div>
        <div>
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Add location"
            class="form-control"
            required
          />
          <!--Success message (valid-feedback)-->
          <div class="valid-feedback">Location looks good!</div>
          <!--Failure message (invalid-feedback)-->
          <div class="invalid-feedback">Please enter valid location</div>
        </div>
        <br />

        <br />
        <button class="btn btn-success">Submit</button>
      </form>
      <br />
    </body>
  </div>
</div>
